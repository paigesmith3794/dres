<div class="container" id="outfit-box">
  <form action="" autocomplete="off">
    <div class="form-group">
      <label for="oCategory">Choose Outfit Category</label>
      <select class="form-control" id="oCategory">
        <option value="interview">Interview</option>
        <option value="casual wear">Casual Wear</option>
        <option value="wedding">Wedding</option>
        <option value="first date">First date</option>
        <option value="festival">Festival</option>
        <option value="a-list">A-list</option>
      </select>
    </div>
    <div class="form-group">
      <label for="oImage">Outfit Image Link</label>
      <input type="text" class="form-control" id="oImage" autocomplete="off" placeholder="Outfit Image Link" value={{outfit.image}}>
    </div>
    <div class="form-group">
      <label for="oPrice">Outfit Total Price</label>
      <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100"
        class="form-control" id="oPrice" value={{outfit.price}} autocomplete="off" placeholder="Outfit Total Price"/>
    </div>
    <button data-id={{outfit.id}} type="submit" class="btn btn-dark" id="submit-outfit">Update Outfit</button>
  </form>
</div>
<div class="container" id="item-form">
  <form>
    <div class="form-group">
      <label for="iName">Item Name</label>
      <input type="text" class="form-control" id="iName" placeholder="Item Name" autocomplete="off">
    </div>
    <div class="form-group">
      <label for="iImage">Image Link</label>
      <input type="text" class="form-control" id="iImage" placeholder="Image Link" autocomplete="off">
    </div>
    <div class="form-group">
      <label for="iPrice">Item Price</label>
      <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100"
        class="form-control" id="iPrice" autocomplete="off" placeholder="Item Price"/>
    </div>
    <div class="form-group">
      <label for="iPurchase">Purchase Link</label>
      <input type="text" class="form-control" id="iPurchase" placeholder="Purchase Link" autocomplete="off">
    </div>


    <button type="submit" class="btn btn-dark" id="submit-item">Add item to outfit</button>
  </form>

</div>
<div class="container mb-5">
  <div class="card-deck my-3">
    {{#each items}}
    <div class="card" data-id="{{this.id}}">
      <button data-id="{{this.id}}" class="btn btn-danger float-right delete mb-2">ï½˜</button>
      <a href="{{this.purchase}}" target="_blank">
        <img class="card-img-top" src="{{this.image}}" alt="item">
      </a>
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p>Price: ${{this.price}}</p>
        <a href="{{this.purchase}}" target="_blank" class="btn btn-dark">Purchase</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
